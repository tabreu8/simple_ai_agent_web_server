OPENAI_API_KEY=your-openai-key-here
# Replace with your actual OpenAI API key

# Document Parsing Configuration
MARKITDOWN_USE_LLM=false
# Set to 'true' to enable LLM-enhanced parsing for images and complex documents
# When enabled, MarkItDown will use OpenAI's LLM for better image descriptions and document understanding
# When disabled (default), uses standard MarkItDown parsing (faster, no additional API costs)

MARKITDOWN_LLM_MODEL=gpt-4.1
# LLM model to use for enhanced parsing (only used when MARKITDOWN_USE_LLM=true)

# ChromaDB Configuration
CHROMADB_PATH=knowledge_base
# Path where ChromaDB will store its database files

CHROMADB_COLLECTION=standard_collection
# Name of the ChromaDB collection to use

# Agent Memory Configuration
AGENT_MEMORY_PATH=memory
# Path where agent conversation history will be stored
